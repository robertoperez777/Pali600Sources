<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="triangle" class="org.koushik.javabrains.Lesson06.Triangle">
		<property name="points">
			<list>
				<ref bean="zeroPoint" />
				<ref bean="point2" />
				<ref bean="point3" />
			</list>
		</property>
	</bean>

	<bean id="zeroPoint" class="org.koushik.javabrains.Lesson06.Point">
		<property name="x" value="0" />
		<property name="y" value="0" />
	</bean>

	<bean id="point2" class="org.koushik.javabrains.Lesson06.Point">
		<property name="x" value="-20" />
		<property name="y" value="0" />
	</bean>

	<bean id="point3" class="org.koushik.javabrains.Lesson06.Point">
		<property name="x" value="20" />
		<property name="y" value="0" />
	</bean>

</beans>
